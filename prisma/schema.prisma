// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./seawolf-default.db"
}

model Folder {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  updatesPerformed Int      @default(0)
  name             String
  path             String   @unique
  files            File[]
  folders          Folder[] @relation("subfolders")
  parentFolderPath String?
  parentFolder     Folder?  @relation("subfolders", fields: [parentFolderPath], references: [path])
}

model File {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  updatesPerformed Int      @default(0)
  name             String
  path             String   @unique
  folder           Folder?  @relation(fields: [folderPath], references: [path])
  folderPath       String?
}
